<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <se.kth.anderslm.ttt.SquareLayout
        android:id="@+id/squareLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/black_boarder_bkg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--images of the grid boxes-->
            <ImageView
                android:id="@+id/imageView0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/black_boarder_bkg"
                android:onClick="playerTap"
                android:padding="20sp"
                android:tag="0"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/black_boarder_bkg"
                android:onClick="playerTap"
                android:padding="20sp"
                android:tag="1"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/black_boarder_bkg"
                android:onClick="playerTap"
                android:padding="20sp"
                android:tag="2"
                app:srcCompat="@drawable/cross" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/black_boarder_bkg"
                android:onClick="playerTap"
                android:padding="20sp"
                android:tag="3"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/black_boarder_bkg"
                android:onClick="playerTap"
                android:padding="20sp"
                android:tag="4"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/black_boarder_bkg"
                android:onClick="playerTap"
                android:padding="20sp"
                android:tag="5"
                app:srcCompat="@drawable/cross" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/black_boarder_bkg"
                android:onClick="playerTap"
                android:padding="20sp"
                android:tag="6"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/black_boarder_bkg"
                android:onClick="playerTap"
                android:padding="20sp"
                android:tag="7"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/black_boarder_bkg"
                android:onClick="playerTap"
                android:padding="20sp"
                android:tag="8"
                app:srcCompat="@drawable/cross" />
        </LinearLayout>

    </se.kth.anderslm.ttt.SquareLayout>

    <!-- Styling for the button is defined in res/drawable/rounded_green_bkg
     Use AppCompatButton, instead of Button, for this styling to take effect -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/restartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="@drawable/rounded_blue_bkg"
        android:onClick="onGameRestart"
        android:text="Restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/squareLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />


</androidx.constraintlayout.widget.ConstraintLayout>